<Window x:Class="BlackjackApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackjackApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#0B6623">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="707*"/>
        </Grid.ColumnDefinitions>

        <StackPanel HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Grid.Column="1"
                Margin="232,0,0,0">

            <TextBlock Text="Blackjack"
                   FontSize="28"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"
                   Foreground="White"/>

            <Button Name="StartButton"
                Content="Start Game"
                Width="150"
                Height="40"
                Click="StartButton_Click"/>

            <Button Name="RestartButton"
                Content="Restart"
                Width="150"
                Height="40"
                Margin="0,10,0,0"
                Click="RestartButton_Click"
                Visibility="Collapsed"/>

            <Button Name="HitButton"
                Content="Hit"
                Width="150"
                Height="40"
                Margin="0,10,0,0"
                Click="HitButton_Click"
                Visibility="Collapsed"/>

            <Button Name="StandButton"
                Content="Stand"
                Width="150"
                Height="40"
                Margin="0,10,0,0"
                Click="StandButton_Click"
                Visibility="Collapsed"/>

            <TextBlock Name="PlayerCardsText"
                   Text="Player Cards:"
                   Margin="0,20,0,0"
                   TextWrapping="Wrap"
                   Foreground="White"/>

            <TextBlock Name="PlayerScoreText"
                   Text="Player: 0"
                   Margin="0,20,0,0"
                   Foreground="White"/>

            <TextBlock Name="DealerScoreText"
                   Text="Dealer: 0"
                   Foreground="White"/>

            <TextBlock Name="WinText"
                   Text="Wins: 0"
                   Margin="0,10,0,0"
                   Foreground="White"/>

            <TextBlock Name="LossText"
                   Text="Losses: 0"
                   Foreground="White"/>

        </StackPanel>
    </Grid>

</Window>
